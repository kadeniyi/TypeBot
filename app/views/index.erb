  <style shim-shadowdom>
  
    
    section {
  margin: 20px;
}

a, a:hover {
  text-decoration: none;
}


    core-toolbar {
      background-color: #b21500;
      color: #fff;
      box-shadow: 0px 3px 2px rgba(0, 0, 0, 0.2);
    }
    
    core-toolbar paper-tabs {
      box-shadow: none;
    }
    
  </style>

  <core-toolbar>
         
    <span flex><a href="/index" style="color: white">Typing Bot</a></span>
  <h3>  
  <span style="float: right; "><label> Hi, <%= user.firstname+" " %>  </label><a href="/logout" style="background-color: rgba(255,255,255,1); padding:2px; border: solid rgba(0,0,0,0.2); border-radius:3px;"> Log out</a></span>
    </h3>
  </core-toolbar>


<div style="background-color:#ffffff; margin-left: auto;padding: 10px; margin-right: auto;margin-bottom: 10px;margin-top: 2px;padding-bottom: 10px; height:auto; width:99%;">
  
	<div class="type2" id="hs1">
		<div id="hs">
			<h2><label>High Scores</label></h2>
			<label class="high" id="high"><%=@high.to_s%></label>
			  <% for @item in highscore %>
			  	<% n+=1 %>
			    <h3><p style="width:100%;"><label style="float: left; padding-left: 2px;width:40%;"><%= n.to_s+". "+@item[:firstname].to_s + " "+@item[:lastname].to_s%></label>
			    	<label style="float: left; padding-right: 4px; width:40%;"><%= @item[:wpm].to_s + "WPM "%></label></p></h3><br/>
			  <% end %>
		</div>
	
	</div>

	<div class="type">
		<script type="text/javascript" src="script.js"></script>

		<paper-button raised class="colored" id="button1"><label id="lab">Start Typing!</label></paper-button>
		<div id="result" style="float: right; "></div>
		<div class="click" id="mydiv">
			<p><h2 id="mlabel"><label id="mylabel" style="text-align:justified"><%= quest[rand(0..6)] %><label></h2></p>
			
				<textarea id="t1"></textarea>
			<p class="charac">
	           	<span class="label">Characters/Minute</span>
	            <span id="CPM">0</span>
	        </p>
	        <p>
	            <span class="label">Words/Minute</span>
	            <span id="WPM">0</span>
	        </p>
	</div>


	
<form id="foo" class="hideform">
   
    <input id="bar" name="bar" type="text" />
    <input id="bar2" name="bar2" type="text" />

    <input type="submit" value="Send" />
</form>
		
</div>





<style shim-shadowdom>
  paper-button[raised].colored {
      background: #b21500;
      color: #fff;
      width: 200px;
      height: 50px;
      margin-left: auto; 
  	  margin-right: auto;
  	  margin-bottom: 10px;
  	  margin-top: 10px;
    }
   .click{
   	display: none;
   }

   .hideform{
   	display: none;
   }

   .charac{
   	display: none;
   }

  .type{
  	position: absolute;
  	text-transform: inherit;
  	//border: solid #b21500 2px;
  	margin-left: 32%; 
  	margin-right: auto;
  	margin-bottom: 10px;
  	margin-top: 20px;
  	width: 50%;
  	padding: 10px;
  	
  }

  .type2{
  	position: absolute;
  	text-transform: inherit;
  	float: left;
  	margin-top: 18px;
  	margin-bottom: 10px;
  	margin-right: auto;
  	width: 25%;
  	//border: solid #b21500 2px;
  	padding-top: 10px;
  	padding-bottom: 15px;
  }
 
  textarea {
  	margin: auto;
  	border: solid #b21500 1px;
    text-transform: inherit;
  	width: 98%;
  	padding: 2px;
    background-color: rgba(0,0,0,0.1);
  	color: #000;
  	min-height: 100px;
  	font-size: 24px;
  }

  .high{
  	display: none;

  }
</style>


</div>